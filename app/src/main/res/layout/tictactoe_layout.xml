<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tic_tac_toe_mode_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/home_bg"
            android:gravity="center">


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_button_height"
                android:id="@+id/singlepalyerBtn"
                android:background="@drawable/home_btn_bg"
                android:textColor="@color/white"
                android:text="Singleplayer"
                android:textSize="25sp"
                android:layout_marginTop="@dimen/home_button_margin_top"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_button_height"
                android:id="@+id/multiplayerBtn"
                android:layout_gravity="center"
                android:text="Multiplayer"
                android:layout_marginTop="@dimen/home_button_margin_top"
                android:textColor="@color/white"
                android:background="@drawable/home_btn_bg"
                android:textSize="25sp"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tic_tac_toe_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">


    <RelativeLayout
        android:id="@+id/bluetooth_layout"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/bluetooth_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth-Connection"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/bluetooth_connection_status_color_tv"
            android:layout_below="@id/bluetooth_title_tv"
            android:layout_marginTop="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/red"/>

        <TextView
            android:id="@+id/bluetooth_connection_status_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nicht verbunden"
            android:layout_below="@id/bluetooth_title_tv"
            android:layout_toRightOf="@id/bluetooth_connection_status_color_tv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            />

        <ImageButton
            android:id="@+id/bluetooth_activate_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/bluetooth_searching"

            />


    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="horizontal">


        <Button
            android:id="@+id/A1"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="@color/white"
            android:minHeight="64dip"
            android:textSize="32sp" />

        <Button
            android:id="@+id/A2"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:minHeight="64dip"
            android:textSize="32sp" />

        <Button
            android:id="@+id/A3"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="@color/white"
            android:minHeight="64dip"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="horizontal">
    <Button
        android:id="@+id/B1"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/B2"
        android:background="@color/white"
        android:minHeight="64dip"
        android:textSize="32sp" />

    <Button
        android:id="@+id/B2"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:minHeight="64dip"
        android:text=""
        android:textSize="32sp" />


    <Button
        android:id="@+id/B3"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:minHeight="64dip"
        android:textSize="32sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="horizontal">


        <Button
            android:id="@+id/C1"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="@color/white"
            android:minHeight="64dip"
            android:textSize="32sp" />

        <Button
            android:id="@+id/C2"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:minHeight="64dip"
            android:textSize="32sp" />

        <Button
            android:id="@+id/C3"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="@color/white"
            android:minHeight="64dip"
            android:textSize="32sp" />

    </LinearLayout>



    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:layout_below="@+id/C2"
        android:layout_toStartOf="@+id/B3"
        android:layout_marginTop="39dp" />
</LinearLayout>
</LinearLayout>
</LinearLayout>